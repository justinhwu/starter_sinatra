<h1> Edit Instructor Details </h1>

<form method='post' action="/instructors/<%=@instructor.id%>">
  <input type='hidden' name='_method' value='patch'>

  <label for='first_name'>First Name:</label>
  <input type='text' name='instructor[first_name]' value='<%= @instructor.first_name %>'><br>

  <label for='last_name'>Last Name:</label>
  <input type='text' name='instructor[last_name]' value='<%= @instructor.last_name %>'><br>

  <input type='submit' value='Update Instructor'>


</form>
